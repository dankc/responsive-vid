{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "lib": ["es6", "dom"],
        "moduleResolution": "bundler",
        "strict": true,
        "sourceMap": false,
        "declaration": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": [],
        "baseUrl": ".",
        "outDir": "./dist/module/",
        "removeComments": true
    },
    "include": [
        "src/module/**/*.ts"
    ],
    "exclude": ["node_modules", "dist", "src/**/*.tsx", "src/**/*.vue"]
}
