{
  "name": "responsive-video",
  "version": "1.0.0",
  "description": "A TypeScript-supported library for Vue, JS modules, and browser scripts to dynamically swap video sources and posters based on media queries",
  "keywords": [
    "vue",
    "typescript",
    "responsive",
    "video"
  ],
  "readme": "./README.md",
  "license": "LGPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "build:vue": "cross-env BUILD_TARGET=vue vite build && vue-tsc --declaration --emitDeclarationOnly --project tsconfig.vue.json && node ./scripts/rename.js",
    "build:browser": "cross-env BUILD_TARGET=browser vite build && tsc --project tsconfig.module.json",
    "build:module": "cross-env BUILD_TARGET=module vite build && tsc --project tsconfig.module.json && node ./scripts/rename.js",
    "build:react": "echo 'React build not implemented yet'",
    "build": "npm run build:vue && npm run build:module && npm run build:browser",
    "test": "echo \"No tests specified\" && exit 1"
  },
  "main": "./dist/module/responsive-video.cjs",
  "module": "./dist/module/responsive-video.js",
  "types": "./dist/module/responsive-video.d.ts",
  "browser": "./dist/browser/responsive-video.js",
  "files": [
    "dist/browser",
    "dist/module",
    "dist/vue",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/module/responsive-video.d.ts",
      "require": "./dist/module/responsive-video.cjs",
      "import": "./dist/module/responsive-video.js"
    },
    "./browser": {
      "default": "./dist/browser/responsive-video.js"
    },
    "./vue": {
      "types": "./dist/vue/responsive-video.d.ts",
      "require": "./dist/vue/responsive-video.cjs",
      "import": "./dist/vue/responsive-video.js"
    },
    "./react": {
      "types": "./dist/react/responsive-video.d.ts",
      "require": "./dist/react/responsive-video.cjs",
      "import": "./dist/react/responsive-video.js"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dankc/Responsive-Video.git"
  },
  "bugs": {
    "url": "https://github.com/dankc/Responsive-Video/issues"
  },
  "homepage": "https://github.com/dankc/Responsive-Video#readme",
  "author": {
    "name": "Dan Kiser",
    "email": "dankc@pm.me"
  },
  "peerDependencies": {
    "vue": "^3.2"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.5.0",
    "cross-env": "^7.0.3",
    "rollup": "^4.30.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-vue": "^6.0.0",
    "typescript": ">=4.4.4",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.5.0",
    "vue": "3.2",
    "vue-tsc": "^2.0.0"
  },
  "sideEffects": false
}
